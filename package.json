{
   "name": "api",
   "version": "0.1.0",
   "description": "Api",
   "repository": {
      "type": "git",
      "url": "https://github.com/aleCeres/api.git"
   },
   "author": "Alessandro",
   "license": "MIT",
   "lint-staged": {
      "*.{js,ts}": "yarn lint"
   },
   "scripts": {
      "build-ts": "tsc",
      "build": "yarn build-ts && yarn lint",
      "debug": "yarn build && yarn watch-debug",
      "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
      "serve-debug": "nodemon --inspect dist/src/server.js",
      "serve": "node dist/src/server.js",
      "start": "ts-node src/index.ts",
      "test": "jest --forceExit --coverage --verbose",
      "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,API\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
      "watch-node": "nodemon dist/src/server.js",
      "watch-test": "yarn test -- --watchAll",
      "watch-ts": "tsc -w",
      "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,API\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
      "hasura": "dotenv run hasura --skip-update-check --project ./hasura",
      "hasura:console": "yarn hasura console",
      "hasura:migrate": "yarn hasura migrate apply",
      "compose": "docker-compose up -d",
      "typeorm": "typeorm-ts-node-commonjs",
      "test:hasura": "dotenv -f test.env run hasura --skip-update-check --project ./hasura",
      "test:hasura:console": "yarn test:hasura console",
      "test:hasura:migrate": "yarn test:hasura migrate apply",
      "test:compose": "docker-compose -f docker-compose.test.yml up -d"
   },
   "dependencies": {
      "dotenv": "10.0.0",
      "express": "4.17.1",
      "express-correlation-id": "2.0.1",
      "google-auth-library": "8.0.2",
      "helmet": "4.6.0",
      "joi": "17.6.0",
      "jsonwebtoken": "8.5.1",
      "loglevel": "1.7.1",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.6"
   },
   "devDependencies": {
      "@lasalefamine/eslint-config-base": "1.0.0",
      "@types/eslint": "7.28.1",
      "@types/express": "4.17.13",
      "@types/express-correlation-id": "1.2.3",
      "@types/jest": "27.5.1",
      "@types/jsonwebtoken": "8.5.8",
      "@types/node": "^16.11.10",
      "@types/supertest": "2.0.12",
      "@typescript-eslint/eslint-plugin": "5.0.0",
      "@typescript-eslint/parser": "5.0.0",
      "concurrently": "6.3.0",
      "dotenv": "10.0.0",
      "eslint": "7.32.0",
      "eslint-plugin-import": "2.24.2",
      "hasura-cli": "2.0.9",
      "jest": "28.1.0",
      "lint-staged": "11.1.2",
      "nodemon": "2.0.13",
      "supertest": "6.2.3",
      "ts-jest": "28.0.2",
      "ts-node": "10.7.0",
      "typescript": "4.5.2"
   }
}
